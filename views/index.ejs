    <section class="py-20">
      <div class="max-w-7xl mx-auto text-center">
        <div class="main-top-content__title mb-6">
          <span class="block text-2xl mb-2">Dreamed Best Site</span>
          <h2
            class="flex justify-center items-center space-x-2 text-4xl md:text-6xl font-bold animated__content__wrapper"
          >
            <span class="animated--header-first-word text-emerald-500"
              >For-</span
            >
            <span
              class="txt-type animated--headline animated-text"
              data-wait="3000"
              data-words='["Education", "Learning", "Searching Tutor", "Students", "Tutition Service", "Responsive tutorial platform"]'
            >
              <span class="txt"></span>
            </span>
          </h2>
        </div>
        <h1 id="dynamic-title" class="text-4xl md:text-6xl font-bold mb-4"></h1>
        <p class="text-lg md:text-2xl mb-6">
          Discover and get personalized tutoring experiences.
        </p>
      </div>
    </section>

    <div class="banner">
      <div class="slider" style="--quantity: 10">
        <div class="item" style="--position: 1">
          <img src="assests/im1.webp" alt="" />
        </div>
        <div class="item" style="--position: 2">
          <img src="assests/im2.webp" alt="" />
