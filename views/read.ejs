<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <!-- <link rel="stylesheet" href="/public/stylesheet/style.css"> -->
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-500">
    <a href="/" class="m-2">Back to home</a>
    <h1 class="w-full text-black text-center text-2xl">Read users information</h1>
    <div class="bg-orange-500 p-5 flex gap-3 w-full">
        
        <% if (users.length > 0) { %>
            <% users.forEach(function(user) { %>
                <div class="bg-green-500 w-52">
                    <div class="bg-blue-500 h-52">
                        <img src="<%= user.user_image %>" alt="">


                    </div>
                    <h2>User Name:<%= user.user_name %></h2>
                    <h2>User Email:<%= user.user_email %></h2>
                    <div class="flex items-center justify-center gap-3">
                        <a class="bg-red-500 p-3" href="/edit/<%= user._id %>">Epdate</a>
                        <a class="bg-yellow-500 p-3" href="/delete/<%= user._id %>">Delete</a>
                    </div>
                </div>
            <% }) %>
        <% } else { %>
            <p>No users found</p>
        <% } %>
        
    </div>
</body>
</html>